<!-- include header -->
<%- include('include/header') %>
<!-- /include header -->
<!-- main  part of the webpage  -->
<main id="site-main">
  <div class="container">
        <div class="box-nav d-flex justify-between">
            <a href="/addlogs" class="border-shadow">
                <span class="text-gradient"> Add log </span>
            </a>
        </div>


        <!-- data entry from  -->
        <form action="/" method="POST">
            <table class="display table">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Price</th>
                        <th>Payment type</th>
                        <th>Reason of payment </th>
                        <th> recived by </th>
                        <th>change</th>
                    </tr>
                </thead>
                <tbody class=" data ">
                    
                        <% logs.forEach(log=>{ %>
                        <tr>
                            <td>
                                <%= log.log_ID %>
                            </td>
                            <td>
                                <%= log.name%>
                            </td>
                            <td>
                                <%=log.price%>
                            </td>
                            <td>
                                <%=log.date%>
                            </td>
                            <td>
                                <%=log.paymenttype%>
                            </td>
                            <td>
                                <%=log.reasonofpayment%>
                            </td>
                            <td>
                                <%=log.paidwith%>
                            </td>
                            <td>
                                <a href="/updatelogs/<%= log.id%>" class="btn border-shadow update">
                                    <span class="text-gradient"><i class="fas fa-pencil-alt">Edit</i></span>
                                </a>
                                <a href="/index/delete/<%= log.id%>" class="btn border-shadow delete">
                                    <span class="text-gradient"><i class="fas fa-times">Delete</i></span>
                                </a>
                            </td>
                        </tr>
                            <% }); %>
                    <br>
                </tbody>
            </table>
        </form>
    </div>
</main>

<!-- /main  part of the webpage  -->
